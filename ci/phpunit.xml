<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    stopOnFailure="false"
    bootstrap="../vendor/autoload.php">
    <testsuites>
        <testsuite name="php-skeleton">
            <directory>../test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="build/coverage" title="Test Coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/log/clover.xml"/>
        <log type="junit" target="build/log/junit.xml"/>
    </logging>
</phpunit>
