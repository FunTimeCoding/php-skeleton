<phpdox xmlns="http://phpdox.net/config">
    <project name="php-skeleton" source="${basedir}/.." workdir="ci/build/phpdox">
        <collector publiconly="false">
            <include mask="*/src/**/*.php"/>
            <include mask="*/test/**/*.php"/>
            <exclude mask="*/vendor/*"/>
        </collector>
        <generator output="ci/build">
            <build engine="html" enabled="true" output="api"/>
        </generator>
    </project>
</phpdox>
