<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="../vendor/autoload.php">
    <testsuites>
        <testsuite name="php-skeleton">
            <directory>../test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../ci/build/coverage" title="Test Coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../ci/build/log/clover.xml"/>
        <log type="junit" target="../ci/build/log/junit.xml"/>
    </logging>
</phpunit>

