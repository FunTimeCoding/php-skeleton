<phpdox xmlns="http://phpdox.net/config">
    <project name="php-skeleton" source="${basedir}" workdir="build/phpdox-tmp">
        <collector publiconly="false">
            <include mask="*/src/**/*.php"/>
            <include mask="*/test/**/*.php"/>
            <exclude mask="*/vendor/*"/>
        </collector>
        <generator output="build">
            <enrich base="${basedir}/build">
                <source type="build"/>

                <source type="git"/>

                <source type="phploc">
                    <file name="log/phploc.xml"/>
                </source>

                <source type="phpunit">
                    <coverage path="coverage-xml"/>
                </source>

                <source type="phpcs">
                    <file name="log/checkstyle-result.xml"/>
                </source>

                <source type="pmd">
                    <file name="log/pmd.xml"/>
                </source>
            </enrich>
            <build engine="html" enabled="true" output="phpdox"/>
        </generator>
    </project>
</phpdox>
